{
  "name": "currency-conversion",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@7.9.3",
  "scripts": {
    "dev": "vite --host & pnpm style:watch",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint:check": "pnpm prettier --check .",
    "lint:format": "pnpm prettier --write .",
    "lint:fix": "eslint --ext .tsx,.ts,.js,.vue --fix ./src",
    "prepare": "husky install",
    "style:watch": "pnpm typed-scss-modules src --watch --ignore \"**/index.scss\""
  },
  "dependencies": {
    "chart.js": "^3.9.1",
    "dayjs": "^1.11.5",
    "mathjs": "^11.1.0",
    "reset-css": "^5.0.1",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "@vicons/carbon": "^0.12.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "naive-ui": "^2.32.2",
    "prettier": "^2.7.1",
    "sass": "^1.54.5",
    "typed-scss-modules": "^6.5.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vite-plugin-open-graph": "^1.1.4",
    "vue-tsc": "^0.40.1"
  },
  "lint-staged": {
    "**/*": "prettier --write . --ignore-unknown",
    "*.{js,ts,tsx,vue}": "eslint --ext .tsx,.ts,.js,.vue --fix ./src"
  }
}
